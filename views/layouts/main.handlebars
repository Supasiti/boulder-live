<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" 
      crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Boulder Live</title>
  </head>

  <body class="min-vh-100">
    <!-- HEADER -->
    <header class="p-3 bg-dark text-white">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-2 border-bottom">
        
          <h3 class="align-items-center col-md-3 mb-2 mb-md-0 text-light text-decoration-none">
            {{pageTitle}}
          </h3>

          <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="/" class="nav-link px-2 text-secondary">Home</a></li>
            <li><a href="/purpose" class="nav-link px-2 text-white">Dashboard</a></li>
          </ul>

          <div class="col-md-3 text-end">
            {{#if loggedIn}}
              <button 
                id='btn-logout' 
                type="button" 
                class="btn btn-outline-light me-2">
                Logout
              </button>
            {{/if}}
          </div>
        </div>
      </div>
    </header>
    

    <!-- MAIN -->
    <main class="container container-fluid mt-5">
      {{{ body }}}
    </main>
    <footer>
      
    </footer>

    <script 
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" 
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" 
      crossorigin="anonymous">
    </script>
    
    {{#if loggedIn }}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
</html>