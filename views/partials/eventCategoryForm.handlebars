<form id="event-category-form" class="px-3 py-4" novalidate>
  {{#> categoryTable}}
    {{#each categories}}
      {{> categoryTableRow  }}
    {{/each }}
  {{/categoryTable}}

  <div class="d-flex justify-content-center">
    <button 
      id="btn-add-category-table-row"
      class="btn btn-primary mx-3" 
      type="button">
      Add Row
    </button>
    <button 
      class="btn btn-primary mx-3" 
      type="button">
      Save
    </button>
  </div>
</form>

<script src="/js/addCategoryTableRow.js"></script>