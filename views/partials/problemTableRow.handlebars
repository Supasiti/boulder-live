<tr 
  class="problem-row"
  data-problem-id="{{id}}">

  <th scope="row">{{id}}</th>
  <td>{{name}}</td>
  <td class="text-end">
    <button 
      class=" btn btn-sm btn-light" 
      type="button">
      <i class="far fa-edit"></i>
    </button>
  </td>
  <td class="text-end">
    <button 
      class=" btn btn-sm btn-light" 
      type="button">
      <i class="far fa-trash-alt"></i>
    </button>
  </td>
</tr>