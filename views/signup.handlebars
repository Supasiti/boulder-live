<div class="form-signin mt-5">
  <form id="signup-form" novalidate>
    <h2 class="h3 mb-3 fw-normal">Please enter your details</h2>

    {{#> loginInput 
      idAddOn="basic-addon1" idName="username-input" placeholder="Username"
      label="Username" }} 
      @
    {{/loginInput}}

    {{#> loginInput 
      idAddOn="basic-addon2" idName="email-input" placeholder="user@email.com"
      label="Email" }} 
      #
    {{/loginInput}}
    
    {{#> loginInput 
      idAddOn="basic-addon3" idName="password-input" placeholder="Password"
      label="Password" type="password" }} 
      #
    {{/loginInput}}

    {{#>button class="w-100 btn-lg" type="submit"}}
      Sign up
    {{/button}}
  </form>

  <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
</div>

<script src="/js/addFormValidation.js"></script>
<script src="/js/signup.js"></script>